<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="Teilprojekt_SS2011.MainWindow"
	x:Name="mainWindow"
	Width="926" Height="591"
    xmlns:locale="clr-namespace:Teilprojekt_SS2011"
    xmlns:vm="clr-namespace:Canon_EOS_Remote.ViewModel"
    Title="" Loaded="Window_Loaded">
    <Window.DataContext>
        <vm:ViewModel/>
    </Window.DataContext>
	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="0.15*"/>
			<RowDefinition Height="0.35*"/>
			<RowDefinition Height="0.50*"/>
		</Grid.RowDefinitions>
		<Menu Height="25" VerticalAlignment="Top">
			<MenuItem Header="Datei" Height="25" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold">
			<MenuItem Header="Beenden" Width="Auto" Height="Auto" Margin="0"></MenuItem>
			</MenuItem>
			<MenuItem Header="Kamera" Height="25" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold">
			</MenuItem>
			<MenuItem Header="Script" Height="25" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold">
				<MenuItem Header="Neu"></MenuItem>
				<MenuItem Header="Öffnen"></MenuItem>
				<MenuItem Header="Speichern"></MenuItem>
				<MenuItem Header="Speichern unter"></MenuItem>
			</MenuItem>
			<MenuItem Header="Info" Height="25" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold"/>
		</Menu>
		<Label Content="{Binding Path=ViewModelCurrentCamera.CurrentCameraName}" HorizontalAlignment="Left" Margin="0,25,0,15" d:LayoutOverrides="Height" Height="30"/>
		<Label Content="{Binding Path=ViewModelCurrentCamera.CurrentAvailableShots}" HorizontalAlignment="Left" Margin="150,25,0,15" d:LayoutOverrides="Height" Height="30" Width="35" />
		<Label Content="Batterie Status : " Margin="300,25,226,15" d:LayoutOverrides="Height" Grid.Row="0" Height="30"/>
		<ProgressBar HorizontalAlignment="Right" Margin="0,23,29,11" Width="200" Grid.Row="0" Height="20" Minimum="0" Maximum="100" Value="{Binding Path=ViewModelCurrentCamera.CurrentBatteryLevel, UpdateSourceTrigger=PropertyChanged}" />
		<TabControl Grid.Row="1" BorderBrush="{x:Null}">
			<TabItem Header="Allgemein" HorizontalAlignment="Center" VerticalAlignment="Center">
				<Grid>
					<Label Content="Kamera auswählen : " HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto"></Label>
                    <ComboBox HorizontalAlignment="Left" Margin="121.953,4,0,0" VerticalAlignment="Top" Width="128" ItemsSource="{Binding Path=CameraListView, UpdateSourceTrigger=PropertyChanged}" Name="CBCameraList" DisplayMemberPath="CameraName" IsSynchronizedWithCurrentItem="True">
                    </ComboBox>
                    <Label Content="Kameraname : " Height="28" HorizontalAlignment="Left" Margin="6,40,0,0" Name="lKameraName" VerticalAlignment="Top" Width="112" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="122,40,0,0" Name="lKameraNameShow" VerticalAlignment="Top" Width="142" Content="{Binding Path=ViewModelCurrentCamera.CurrentCameraName, UpdateSourceTrigger=PropertyChanged}"/>
                    <Label Content="Kamerabesitzer : " Height="28" HorizontalAlignment="Left" Margin="6,74,0,0" Name="lOwner" VerticalAlignment="Top" Width="112" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="122,74,0,0" Name="lOwnerShow" VerticalAlignment="Top" Width="142" Content="{Binding Path=ViewModelCurrentCamera.CurrentCameraOwner, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="Kamerafirmware :   " Height="28" HorizontalAlignment="Left" Margin="6,108,0,0" Name="lCameraFirmware" VerticalAlignment="Top" Width="112" />
                    <Label Content="{Binding Path=ViewModelCurrentCamera.CurrentCameraFirmware}" Height="28" HorizontalAlignment="Right" Margin="0,108,630,0" Name="lCameraFirmwareShow" VerticalAlignment="Top" Width="142" />
                    <Label Content="ISO : " Height="28" HorizontalAlignment="Left" Margin="340,0,0,0" Name="lISO" VerticalAlignment="Top" Width="99" />
                    <Label Height="28" HorizontalAlignment="Right" Margin="0,40,386,0" Name="lBelichtungszeitShow" VerticalAlignment="Top" Content="{Binding Path=ViewModelCurrentCamera.CurrentTv, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="466,0,0,0" Name="lISOShow" VerticalAlignment="Top" Content="{Binding Path=ViewModelCurrentCamera.CurrentISO, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="Belichtungszeit : " Height="28" HorizontalAlignment="Left" Margin="340,40,0,0" Name="lBelichtungszeit" VerticalAlignment="Top" />
                    <Label Content="Programmmodus : " Height="28" HorizontalAlignment="Left" Margin="340,74,0,0" Name="lAEMode" VerticalAlignment="Top" />
                    <Label Content="{Binding Path=ViewModelCurrentCamera.CurrentProgramm, UpdateSourceTrigger=PropertyChanged}" Height="28" HorizontalAlignment="Right" Margin="0,74,311,0" Name="lAEModeShow" VerticalAlignment="Top" />
                </Grid>
			</TabItem>
			<TabItem Header="Objektiv" HorizontalAlignment="Center" VerticalAlignment="Center">
				<Grid>
					<Grid HorizontalAlignment="Left" Margin="0,0,0,18.9" Width="154">
						<Label Content="Fokussteuerung" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="SemiBold"/>
						<Button x:Name="BFokusNah1" Content="Nah 1" HorizontalAlignment="Left" Margin="0,29.96,0,0" VerticalAlignment="Top" Width="75"/>
						<Button x:Name="BFokusFern1" Content="Fern 1" HorizontalAlignment="Right" Margin="0,29.96,0,0" VerticalAlignment="Top" Width="75"/>
						<Button x:Name="BFokusFern2" Content="Fern 2" Margin="0,55.92,0,64.81" HorizontalAlignment="Right" Width="75" d:LayoutOverrides="Height"/>
						<Button x:Name="BFokusNah2" Content="Nah 2" Margin="0,55.92,0,64.81" HorizontalAlignment="Left" Width="75" d:LayoutOverrides="Height"/>
						<Button x:Name="BFokusNah3" Content="Nah 3" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,38.85"/>
						<Button x:Name="BFokusFern3" Content="Fern 3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,38.85"/>
					</Grid>
					
				</Grid>
			</TabItem>
			<TabItem Header="Kamera">
				<Grid>
					<Label Content="ISO" HorizontalAlignment="Left" VerticalAlignment="Top"/>
					<Label Content="Blende" HorizontalAlignment="Left" Margin="0,0,0,18.9" VerticalAlignment="Bottom"/>
					<Label Content="Belichtungszeit" HorizontalAlignment="Left" Margin="0,25.96,0,0" VerticalAlignment="Top"/>
					<Label Content="Programm" HorizontalAlignment="Left" Margin="0,51.92,0,44.86" d:LayoutOverrides="Height"/>
					<Label Content="EBV" HorizontalAlignment="Left" Margin="269.596,0,0,0" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Left" Margin="116.787,4,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=ViewModelCurrentCamera.AvailableISOListView, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" />
                    <ComboBox HorizontalAlignment="Left" Margin="116.787,29.96,0,0" Width="120" VerticalAlignment="Top" ItemsSource="{Binding Path=ViewModelCurrentCamera.AvailableShutterTimesView, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" />
                    <ComboBox HorizontalAlignment="Left" Margin="116.787,55.92,0,44.86" Width="120" d:LayoutOverrides="Height" ItemsSource="{Binding Path=ViewModelCurrentCamera.AEView, UpdateSourceTrigger=PropertyChanged}" IsSynchronizedWithCurrentItem="True" />
					<ComboBox HorizontalAlignment="Left" Margin="116.787,0,0,18.9" VerticalAlignment="Bottom" Width="120"/>
					<ComboBox HorizontalAlignment="Right" Margin="0,4,167,0" Width="120" VerticalAlignment="Top"/>
                    <Button Content="Foto aufnehmen" Height="23" HorizontalAlignment="Left" Margin="607,56,0,0" Name="bTakePhoto" VerticalAlignment="Top" Width="96" Command="{Binding Path=ViewModelCurrentCamera.CommandTakePhoto, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
			</TabItem>
			<TabItem Header="Script">
				<Grid>
					<Button Content="ISO ändern" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126.277" Margin="8,0,0,0"/>
					<Button Content="Blende ändern" Margin="8,0,0,51.79" VerticalAlignment="Bottom" Width="126.277" HorizontalAlignment="Left"/>
					<Button Content="Belichtungszeit ändern" Margin="8,65.88,0,73.75" Width="Auto" HorizontalAlignment="Left" d:LayoutOverrides="Height"/>
					<Button Content="EBV ändern" HorizontalAlignment="Left" Margin="8,21.96,0,0" VerticalAlignment="Top" Width="126.277"/>
					<Button Content="Fokus ändern" HorizontalAlignment="Left" Margin="8,43.92,0,0" Width="126.277" Height="21.96" VerticalAlignment="Top"/>
					</Grid>
			</TabItem>
		</TabControl>
        <Image Grid.Row="2" Height="150" HorizontalAlignment="Left" Margin="704,0,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="200" Source="{Binding Path=ViewModelCurrentCamera.Imageref}" />
    </Grid>
</Window>